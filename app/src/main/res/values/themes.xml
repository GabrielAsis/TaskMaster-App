<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.TaskMaster" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.TaskMaster" parent="Base.Theme.TaskMaster" />

    <style name="DropDownStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/blue</item>
    </style>

    <style name="CustomNavItemStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="CustomToolBarStyle" parent="TextAppearance.AppCompat.Body2">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <color name="mtrl_textinput_default_box_stroke_color" tools:override="true">@color/blue</color>
</resources>